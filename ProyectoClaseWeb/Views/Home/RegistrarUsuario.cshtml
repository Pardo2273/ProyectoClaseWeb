@model ProyectoClaseWeb.Entities.UsuariosEntities
@{
    ViewData["Title"] = "Registrarse";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row w-100 mx-0">
    <div class="col-lg-4 mx-auto">
        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
            <div class="brand-logo">
                <img src="~/template/images/logo.svg" />
            </div>
            <h4>Registrar Cuenta</h4>
            @using (Html.BeginForm("RegistrarUsuario", "Home", FormMethod.Post, new { @class = "pt-3" }))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.CorreoElectronico, new{@class="form-control form-control-lg", @placeholder="correo", @Type="Email"})@*dentro del new van todos los atributos*@
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Contrasenna, new{@class="form-control form-control-lg", @placeholder="Contrasenna"})
                </div>

                <div class="mt-3">
                    <input type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" value="Registrarse">
                </div>
            }
        </div>
    </div>
</div>